<%- include('../partials/navbar.ejs') %>
<div class="container">
    <div class="box headline-border">
        <h6 class="box-heading bottom-border">Read The Document</h6>
        <p class="body1">You have to fill-up all the required fields. The student image size in between 10kb to 1Mb and
            note that the photo will be crop in 1:1 ratio after being uploading, so make sure that your face is center
            in the photo as possible</p>
    </div>
    <div class="box">
        <!-- Form -->
        <form action="/create" method="POST">
            <!-- Form headlines -->
            <h6 class="form-branding">Add new student</h6>
            <% if (locals.messages.msg) { %>
            <div class="alert alert-danger">
                <span class="closeBtn" onclick="alertClose(this)">&times;</span>
                <%=locals.messages.msg%>
            </div>
            <% } %>
            <!-- displaying success messages -->
            <% if (locals.messages.success) { %>
            <div class="alert alert-success">
                <span class="closeBtn" onclick="alertClose(this)">&times;</span>
                <%=locals.messages.success%>
            </div>
            <% } %>
            <%- include('_form_fields') %>
            <!-- form input button -->
            <input class="form-button" type="submit" value="Add">
            <!-- form text group -->
            <div class="form-text-group">
                <p>All students </p><a href="/student">Go To</a>
            </div>
        </form>
        <!-- Form -->
    </div>
</div>
<%- include('../partials/scripts') %>