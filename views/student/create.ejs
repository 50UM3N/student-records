<%- include('../partials/navbar.ejs') %>
<div class="container" style="margin-top: 30px ;">
    <div class="card" style="max-width: 700px; margin: 0 auto;">
        <article class="card-body">
            <a href="/student" class="float-right btn btn-outline-primary">Students</a>
            <% if(locals.messages.msg) {%>
            <div class="alert alert-danger" role="alert">
                <%= locals.messages.msg %>
            </div>
            <% } %>
            <% if (locals.messages.success) { %>
            <div class="alert alert-success" role="alert">
                <%= locals.messages.success %>
            </div>
            <% } %>
            <form action="/create" method="POST">
                <h4 class="card-title mb-4 mt-1">Add Student</h4>
                <div class="cont">
                    <label> Image *</label>
                    <input required id="flpond" type="file" class="filepond" name="studentImage">
                </div>
                <div class="form-group">
                    <label> Name</label>
                    <input name="name" class="form-control" placeholder="Full Name" type="name" required>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input name="email" class="form-control" placeholder="Email" type="email" required>
                </div>
                <div class="form-group">
                    <label>Phone No.</label>
                    <input name="phone" class="form-control" placeholder="Phone No" type="phone" required>
                </div>
                <div class="form-group">
                    <label>Degree</label>
                    <input name="degree" class="form-control" placeholder="Degree" type="degree" required>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block"> ADD </button>
                </div>
            </form>
        </article>
    </div>
</div>
<div class="sm" style="margin: 50px auto; max-width: 700px; ">

</div>

